if {[catch {

source "${CMAKE_BINARY_DIR}/base.tcl"

########################################################################################################
puts "[color $clr_flow "** HLS compilation ..."]"
puts "[color $clr_flow "**"]"

# Compile all hls cores
set krnls [glob -nocomplain -tails -directory "${CMAKE_SOURCE_DIR}/hw/hls" -type d *]
puts "[color $clr_flow "** building the following kernels: $krnls"]"

foreach krnl $krnls {
    # Copy all files
    file mkdir "$build_dir/hdl/$krnl\_hls"
    set files_hdl [glob -nocomplain "${CMAKE_SOURCE_DIR}/hw/hls_include/*.hpp" "${CMAKE_SOURCE_DIR}/hw/hls/$krnl/*.hpp" "${CMAKE_SOURCE_DIR}/hw/hls/$krnl/*.cpp" "${CMAKE_BINARY_DIR}/hls/$krnl.cpp" "${CMAKE_BINARY_DIR}/hls/$krnl\_tb.cpp"]
    if {[llength $files_hdl]} {
        file copy -force {*}$files_hdl "$build_dir/hdl/$krnl\_hls"
    }

    # Create project
    cd $build_dir/hdl/$krnl\_hls
    open_project "$krnl"
    open_solution "solution1"
    set_part ${FPGA_PART}
    
    create_clock -period "${ACLK_P}" -name default

    # Add files
    set_top "$krnl"
    add_files "$build_dir/hdl/$krnl\_hls/$krnl.cpp" -cflags "-std=c++14 -I $build_dir/hdl/$krnl\_hls $build_dir/hdl/$krnl\_hls"

    if {[file exists "$build_dir/hdl/$krnl\_hls/$krnl\_tb.cpp"]} {
	add_files -tb "$build_dir/hdl/$krnl\_hls/$krnl\_tb.cpp" -cflags "-std=c++14 -Wall -O2 -I $build_dir/hdl/$krnl\_hls $build_dir/hdl/$krnl\_hls"
    }

    # Sim
    if {[file exists "$build_dir/hdl/$krnl\_hls/$krnl\_tb.cpp"]} {
	puts "[color $clr_flow "** Testbench file detected, running the CSim"]"
    	csim_design
    } else {
	puts "[color $clr_flow "** No testbench file detected, skipping the CSim"]"
    }

    # Synth
    csynth_design

    # Export IP
    export_design -format ip_catalog -ipname "$krnl" -display_name "$krnl" -description "" -vendor "user.org" -version "1.0"

    file mkdir ${IPREPO_DIR}
    file delete -force ${IPREPO_DIR}/$krnl
    file copy -force $krnl/solution1/impl/ip ${IPREPO_DIR}/$krnl/
}

########################################################################################################

} errorstring]} {
    puts "[color $clr_error "** CERR: $errorstring"]"
    puts "[color $clr_error "**"]"
    exit 1
}

exit 0
