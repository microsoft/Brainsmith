#include "shuffleB.hpp"

// Number of feature maps processed in a test
constexpr unsigned  ROUNDS = 5;

// Test specified instance against expected reference
template<unsigned W, unsigned H, typename  T>
bool test(hls::stream<T> &ref) {
	hls::stream<hls::vector<T, 4>>  src;
	hls::stream<hls::vector<T, 4>>  dst;

	for(unsigned  i = 0; i < ROUNDS*H*W; i+=4) {
		hls::vector<T, 4> t;
		t[0] = i;
		t[1] = i + 1;
		t[2] = i + 2;
		t[3] = i + 3;
	      	src.write(t);
	}

	bool  ok = true;
	unsigned  timeout = 0;
	while(timeout < H*W) {
		input_gen_bertb<W, H, T>(src, dst);
		if(dst.empty())  timeout++;
		else {
			hls::vector<T,4> y = dst.read();
			T const  r1 = ref.read();

			std::cout << ">> " << y[0];
			if(y[0] != r1) {
				std::cout << " != " << r1 << "(expected)";
				ok = false;
			}
			std::cout << std::endl;

			T const  r2 = ref.read();
			std::cout << ">> " << y[1];
			if(y[1] != r2) {
				std::cout << " != " << r2 << "(expected)";
				ok = false;
			}
			std::cout << std::endl;

			T const  r3 = ref.read();
			std::cout << ">> " << y[2];
			if(y[2] != r3) {
				std::cout << " != " << r3 << "(expected)";
				ok = false;
			}
			std::cout << std::endl;

			T const  r4 = ref.read();
			std::cout << ">> " << y[3];
			if(y[3] != r4) {
				std::cout << " != " << r4 << "(expected)";
				ok = false;
			}
			std::cout << std::endl;

			timeout = 0;
		}
	}
	return  ok && ref.empty();

} // test()

int main() {

	bool  ok = true;
	auto const  heading = [](char const *const  hdg) {
		std::cout << '\n' << hdg << "\n=====" << std::endl;
	};

	//-----------------------------------------------------------------------
	heading("BERT Shuffle B"); {
		constexpr unsigned  S = ${TL_Mtrx_height};	// Sequence
		constexpr unsigned  H =  ${TL_Mtrx_width} / ${TL_Head_size};	// Heads
		constexpr unsigned  I =  ${TL_Head_size};	// Inner
		//	h = [0,H)
		//		i = [0,I)
		//			s = [0,S)
		//	H*S*I: H*I *s + I *h + i

		// Reference Computation
		hls::stream<unsigned>  ref;
		for(unsigned  ii = 0; ii < ROUNDS; ii++) {
			for(unsigned  h = 0; h < H; h++) {
				for(unsigned  i = 0; i < I; i++) {
					for(unsigned  s = 0; s < S; s++) {
						ref.write((ii*H*S*I) + (I *h + i + H*I *s));
					}
				}
			}
		}

		// DUT Invocation
		ok &= test<H*I, S>(ref);
	}

	return  ok? 0 : 1;

} // main()
