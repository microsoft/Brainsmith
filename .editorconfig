# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 80

[*.{yaml,yml}]
indent_size = 2

[*.md]
indent_size = unset

[*.{bat,cmd,ps1,psd1,psm1}]
end_of_line = crlf
charset = utf-8-bom

[Makefile]
# Tab indentation (no size specified)
indent_style = tab
indent_size = unset

[*.{patch,diff}]
end_of_line = unset
charset = unset
trim_trailing_whitespace = false
insert_final_newline = false
indent_style = unset
indent_size = unset
max_line_length = unset
