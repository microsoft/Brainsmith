# EditorConfig: https://EditorConfig.org
# Consistent coding styles for the Brainsmith FPGA accelerator compiler

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python source files
# Note: Black and Ruff handle formatting; this ensures editor consistency
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# C/C++ source files (HLS kernels for FPGA)
[*.{c,h,cpp,hpp,cc,hh}]
indent_style = space
indent_size = 4
max_line_length = 100

# Hardware description languages (Verilog/SystemVerilog)
[*.{v,sv,vh,svh}]
indent_style = space
indent_size = 2

# YAML configuration files
[*.{yaml,yml}]
indent_style = space
indent_size = 2

# JSON configuration files
[*.json]
indent_style = space
indent_size = 2

# TOML configuration files (pyproject.toml, etc.)
[*.toml]
indent_style = space
indent_size = 4

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4

# TCL scripts (Xilinx/Vivado toolchain)
[*.tcl]
indent_style = space
indent_size = 4

# Makefiles require tab indentation
[{Makefile,*.mk}]
indent_style = tab

# Markdown documentation
[*.md]
indent_style = space
indent_size = 2
max_line_length = 100

# Patch and diff files - preserve exact formatting
[*.{patch,diff}]
end_of_line = unset
insert_final_newline = false
trim_trailing_whitespace = false
indent_style = unset
indent_size = unset
